<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_matrix_dimentions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.matrix.leastcost.MatrixDimentions">

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/layout_padding"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/layout_padding"
        android:layout_height="wrap_content">

        <TextView
            android:text="Number of Rows:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/layout_padding"
            android:id="@+id/textView" />
        <EditText android:paddingLeft="@dimen/layout_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="2"
            android:background="@android:color/white"
            android:ems="4"
            android:id="@+id/maxRowInput" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/layout_padding"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/layout_padding"
        android:layout_height="wrap_content">

        <TextView
            android:text="Number of Column:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/layout_padding"
            android:id="@+id/textView1" />
        <EditText android:paddingLeft="@dimen/layout_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:background="@android:color/white"
            android:ems="4"
            android:maxLength="2"
            android:id="@+id/maxColumnInput" />
    </LinearLayout>

    <Button
        android:layout_marginTop="@dimen/layout_padding"
        android:text="Submit"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal"
        android:layout_width="@dimen/button_width"
        android:layout_height="wrap_content"
        android:id="@+id/submitButton" />

</LinearLayout>
